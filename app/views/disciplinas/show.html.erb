<%- model_class = Disciplina -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @disciplina.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
  <dd><%= @disciplina.codigo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @disciplina.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:funcionario_id) %>:</strong></dt>
  <dd><%= @disciplina.funcionario_nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:curso_id) %>:</strong></dt>
  <dd><%= @disciplina.curso.nome %></dd>
  <dt><strong><%= "Alunos:" %></strong>&nbsp;&nbsp;&nbsp;&nbsp;</dt>
  <% @disciplina.turmas.each do |turma| %>
  <% @turma = turma %>
  <% @turma.matriculas.each do |mat| %>
  <dd><li><%= mat.aluno_nome %></li></dd>
  <% end %> 
  <% end %> 
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              disciplinas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_disciplina_path(@disciplina), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              disciplina_path(@disciplina),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza?')) },
              :class => 'btn btn-danger' %>
