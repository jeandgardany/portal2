<%- model_class = Funcionario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
      <th><%= "Matrícula" %></th>
      <th><%= model_class.human_attribute_name(:nascimento) %></th>
      <th><%= "Endereço" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
      <th><%= "Admissão" %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= "Usuário" %></th>
      <th><%= "Cargo" %></th>
      <th><%= "Carga Horária" %></th>
      <th><%= "Turno" %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= link_to funcionario.id, funcionario_path(funcionario) %></td>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.matricula %></td>
        <td><%= funcionario.nascimento %></td>
        <td><%= funcionario.endereco %></td>
        <td><%= funcionario.admissao %></td>
        <td><%= funcionario.status %></td>
        <td><%= funcionario.user.email %></td>
        <td><%= funcionario.funcao.cargo %></td>
        <td><%= funcionario.carga_horaria %></td>
        <td><%= funcionario.turno %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_funcionario_path(funcionario), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      funcionario_path(funcionario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <%= link_to 'Mostrar', funcionario, :class => 'btn btn-default btn-xs'%>
        </td>
      </tr>
    <% end %>
    <%= paginate @funcionarios %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_funcionario_path,
            :class => 'btn btn-primary' %>
