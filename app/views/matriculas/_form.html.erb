<%= form_for(@matricula) do |f| %>
  <% if @matricula.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@matricula.errors.count, "error") %> prohibited this matricula from being saved:</h2>

      <ul>
      <% @matricula.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :semestre %><br>
    <%= f.text_field :semestre %>
  </div>
  <div class="field">
    <%= f.label :inicio %><br>
    <%= f.date_select :inicio %>
  </div>
  <div class="field">
    <%= f.label :fim %><br>
    <%= f.date_select :fim %>
  </div>
  <div class="field">
    <%= f.label :ap1 %><br>
    <%= f.text_field :ap1, :class => 'text_field', :step => '0.01', precision: 5, scale: 2 %>
  </div>
  <div class="field">
    <%= f.label :ap2 %><br>
    <%= f.text_field :ap2, :precision => 5, :scale => 2, format: "%u %n" %>
  </div>
  <div class="field">
    <%= f.label :ap3 %><br>
    <%= f.text_field :ap3, :precision => 5, :scale => 2, format: "%u %n" %>
  </div>
  <div class="field">
    <%= f.label :faltas %><br>
    <%= f.number_field :faltas %>
  </div>
  <div class="field">
    <%= f.label :aluno_id %><br>
    <%= f.collection_select :aluno_id, Aluno.all, :id, :nome, prompt: true %>
  </div>
  <div class="field">
    <%= f.label :funcionario_id %><br>
    <%= f.collection_select :funcionario_id, Funcionario.all, :id, :nome, prompt: true %>
  </div>
  <div class="field">
    <%= f.label :turma_id %><br>
    <%= f.collection_select :turma_id, Turma.all, :id, :codigo, prompt: true %>
  </div>
  <%#= f.collection_check_boxes(:turma_ids, Turma.all, :id, :codigo) %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>