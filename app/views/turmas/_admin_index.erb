<%- model_class = Turma -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= "CÃ³digo" %></th>
      <th><%= model_class.human_attribute_name(:turno) %></th>
      <th><%= model_class.human_attribute_name(:semestre) %></th>
      <th><%= model_class.human_attribute_name(:capacidade) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @turmas.each do |turma| %>
      <tr>
        <td><%= link_to turma.id, turma_path(turma) %></td>
        <td><%= turma.codigo %></td>
        <td><%= turma.turno %></td>
        <td><%= turma.semestre %></td>
        <td><%= turma.capacidade %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_turma_path(turma), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      turma_path(turma),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <%= link_to 'Mostrar', turma, :class => 'btn btn-default btn-xs'%>
        </td>
      </tr>
    <% end %>
    <%= paginate @turmas %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_turma_path,
            :class => 'btn btn-primary' %>
