<body>
  
    <ul>
      <% @usuario = current_user %>
  <h2>Turmas de: <%= @usuario.aluno.nome %></h2>
      
     <p><li>Matricula: <%= @usuario.aluno.mat %></li></p>
     <p><li>Nome: <%= @usuario.aluno.nome %></li></p>
     <p><li>E-mail: <%= @usuario.email %></li></p>
     <p><li>Curso: <%= @usuario.aluno.curso_nome %></li></p>
     <p><li>Turmas: <%= @usuario.aluno.turmas.size %></li></p>
     <p><li>Turmas:</li></p>
     <% @usuario.aluno.turmas.each do |turma| %>
    <%= "#{turma.codigo} - #{turma.semestre}" %>
    <% end %>
   
      <li><%= link_to 'Editar', edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>

    </ul>
</body>
    

