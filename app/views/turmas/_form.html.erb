<% if policy(@turma).edit? %>

<%= form_for @turma, :html => { :class => "form-horizontal turma" } do |f| %>

  <% if @turma.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@turma.errors.count, "error") %> prohibited this turma from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @turma.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codigo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :codigo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:codigo) %>
  </div>
  <div class="form-group">
    <%= f.label :turno, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:turno, ["ManhÃ£","Tarde", "Noite"], prompt: "Selecione") %>
    </div>
    <%=f.error_span(:turno) %>
  </div>
  <div class="form-group">
    <%= f.label :semestre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :semestre, :class => 'form-control' %>
    </div>
    <%=f.error_span(:semestre) %>
  </div>
  <div class="form-group">
    <%= f.label :capacidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.number_field :capacidade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:capacidade) %>
  </div>
   
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                turmas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

<% else %>

<% end %>

